{
    "version": 2,
    "builds": [
        {
            "src": "./app/main.py",
            "use": "@vercel/python"
        },
        {
            "src": "./audio_files/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/audio/files/(.*)",
            "dest": "/audio_files/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/app/main.py"
        }
    ],
    "env": {
        "PYTHONPATH": "./app"
    }
}